# My .zshrc default settings for all

####################
# Helper functions #
####################

# Returns whether the given command is executable or aliased.
_has() {
  return $( whence $1 >/dev/null )
}

_prepend_to_path() {
  if [ -d $1 -a -z ${path[(r)$1]} ]; then
    path=($1 $path);
  fi
}

_append_to_path() {
  if [ -d $1 -a -z ${path[(r)$1]} ]; then
    path=($1 $path);
  fi
}


###############
# zSh general #
###############
export TERM="xterm-256color"    # colors in tmux
export EDITOR="vim"             # what else?
export LC_ALL=en_US.UTF-8       # Locale setting
autoload -U colors && colors    # enable colors

# history
HISTSIZE=1000                   # increase history
SAVEHIST=1000                   # increase saved history
HISTFILE=~/.cache/zsh/history   # file to save history

# Auto complete
autoload -U compinit
zstyle ':completion:*' menu select
# Auto complete with case insenstivity
zstyle ':completion:*' matcher-list '' 'm:{a-zA-Z}={A-Za-z}' 'r:|[._-]=* r:|=*' 'l:|=* r:|=*'
zmodload zsh/complist
compinit
_comp_options+=(globdots)		# Include hidden files.


#########
# zPlug #
#########
source $HOME/.zplug/init.zsh

# plugins

# solarized dir colors
DIRCOLORS_SOLARIZED_ZSH_THEME="256dark"
zplug "pinelibg/dircolors-solarized-zsh"

# The coolest prompt
zplug "denysdovhan/spaceship-prompt", \
    use:spaceship.zsh, \
    from:github, \
    as:theme

# syntax highlighting while you type: green okay / red error
zplug "zsh-users/zsh-syntax-highlighting", \
    defer:2

# suggest which alias you should use
zplug "MichaelAquilina/zsh-you-should-use"

# auto suggestions while you time
zplug "zsh-users/zsh-autosuggestions"

# Source plugins and add commands to $PATH
zplug load # --verbose


